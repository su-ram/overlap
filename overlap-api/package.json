{
  "name": "overlap-api",
  "version": "0.1.0",
  "description": "GraphQL API server for overlap using NestJS and Apollo",
  "main": "dist/main.js",
  "type": "commonjs",
  "scripts": {
    "start": "node dist/main.js",
    "build": "tsc -p tsconfig.build.json",
    "start:dev": "ts-node-dev --respawn --transpileOnly src/main.ts",
    "start:debug": "node --inspect-brk -r ts-node/register src/main.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.11.2",
    "@nestjs/apollo": "^12.0.0",
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/graphql": "^12.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "graphql": "^16.9.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@types/node": "^22.7.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18"
  }
}
